<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_light"
    tools:context="com.example.yukisnote.ui.AboutActivity">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

         <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <ImageView
                 android:layout_marginTop="40dp"
                 android:layout_marginLeft="30dp"
                 android:layout_marginBottom="40dp"
                 android:layout_marginRight="30dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/icon"/>
             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Yuki's Note"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="试着让生活更简单"
                    android:textColor="@color/white"/>
                </LinearLayout>

           </LinearLayout>
           <ImageView
             android:layout_width="match_parent"
             android:layout_height="1px"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:background="@color/white"/>
             <com.balysv.materialripple.MaterialRippleLayout
                 android:layout_marginTop="80dp"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 app:mrl_rippleOverlay="true"
                 app:mrl_rippleColor="?attr/colorPrimary">
                 <Button
                     android:background="@color/white"
                     android:id="@+id/github_btn"
                     android:textColor="?attr/colorPrimary"
                     android:text="github项目地址"
                     android:textSize="@dimen/abc_text_size_button_material"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
             </com.balysv.materialripple.MaterialRippleLayout>
             <com.balysv.materialripple.MaterialRippleLayout
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 app:mrl_rippleOverlay="true"
                 app:mrl_rippleColor="?attr/colorPrimary">
                 <Button
                     android:background="@color/white"
                     android:id="@+id/advice_feedback"
                     android:textColor="?attr/colorPrimary"
                     android:text="意见反馈"
                     android:textSize="@dimen/abc_text_size_button_material"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
             </com.balysv.materialripple.MaterialRippleLayout>
           </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/copyright"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="Created by Wyh"/>
            <TextView
                android:id="@+id/copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:text="Copyright ©2015 Yuki's Note"
                android:paddingBottom="3dp"/>

        </RelativeLayout>



</LinearLayout>
